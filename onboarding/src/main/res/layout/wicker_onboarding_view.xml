<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <android.support.v7.widget.RecyclerView
    android:id="@+id/onboarding_recyclerview_pages"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toTopOf="@+id/onboarding_view_buttons_container"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_weight="0.92" />

  <View
    android:id="@+id/onboarding_view_buttons_container"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:background="@color/primary"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/onboarding_recyclerview_pages"
    app:layout_constraintVertical_weight="0.08" />

  <TextView
    android:id="@+id/onboarding_text_skip"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_padding_midlarge"
    android:layout_marginStart="@dimen/margin_padding_midlarge"
    android:text="@string/action_skip"
    android:textAllCaps="true"
    android:textColor="@color/accent"
    android:textSize="@dimen/text_small"
    app:layout_constraintBottom_toBottomOf="@id/onboarding_view_buttons_container"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="@id/onboarding_view_buttons_container" />
  
  <android.support.v7.widget.AppCompatImageView
    android:id="@+id/onboarding_image_forward"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/margin_padding_midlarge"
    android:layout_marginRight="@dimen/margin_padding_midlarge"
    app:srcCompat="@drawable/ic_forward"
    app:layout_constraintBottom_toBottomOf="@id/onboarding_view_buttons_container"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@id/onboarding_view_buttons_container"/>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:animateLayoutChanges="true">

  <android.support.v7.widget.RecyclerView
    android:id="@+id/onboarding_recyclerview_pages"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintBottom_toTopOf="@id/onboarding_button_getstarted"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_weight="0.92" />

  <android.support.v7.widget.AppCompatButton
    android:id="@+id/onboarding_button_getstarted"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:gravity="center"
    android:text="@string/action_get_started"
    android:textAllCaps="true"
    android:textColor="@color/accent"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/onboarding_recyclerview_pages"
    app:layout_constraintVertical_weight="0.08"
    tools:visibility="visible"/>

</android.support.constraint.ConstraintLayout>